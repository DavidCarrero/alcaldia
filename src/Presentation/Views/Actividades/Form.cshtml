@model Proyecto_alcaldia.Application.ViewModels.ActividadViewModel

@{
    var isEdit = Model?.Id > 0;
    var action = isEdit ? "Edit" : "Create";
    ViewData["Title"] = isEdit ? "Editar Actividad" : "Nueva Actividad";
    Layout = "_LayoutDashboard";
}

<main class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("Ejecución", null),
        ("Actividades", Url.Action("Index", "Actividades")),
        (isEdit ? "Editar Actividad" : "Nueva Actividad", null)
    })

    <section class="row justify-content-center">
        <div class="col-lg-10">
            <article class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-tasks me-2"></i>@(isEdit ? "Editar" : "Nueva") Actividad
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Errores de Validación</h5>
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <form asp-action="@action" asp-controller="Actividades" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        @if (isEdit)
                        {
                            @Html.HiddenFor(m => m.Id)
                        }
                        
                        <div class="row g-3">
                            <!-- Código -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-barcode me-2"></i>
                                    @Html.DisplayNameFor(model => model.Codigo)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Codigo, new { 
                                    @class = "form-control", 
                                    placeholder = "Ingrese el código",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Tipo Actividad -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-tag me-2"></i>
                                    @Html.DisplayNameFor(model => model.TipoActividad)
                                </label>
                                @Html.TextBoxFor(model => model.TipoActividad, new { 
                                    @class = "form-control", 
                                    placeholder = "Tipo de actividad",
                                    maxlength = "5",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.TipoActividad, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Nombre -->
                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-heading me-2"></i>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Nombre, new { 
                                    @class = "form-control", 
                                    placeholder = "Nombre de la actividad",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Descripción -->
                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-align-left me-2"></i>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </label>
                                @Html.TextAreaFor(model => model.Descripcion, new { 
                                    @class = "form-control", 
                                    rows = "3",
                                    placeholder = "Descripción de la actividad",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Porcentaje Avance -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-percent me-2"></i>
                                    @Html.DisplayNameFor(model => model.PorcentajeAvance)
                                </label>
                                @Html.TextBoxFor(model => model.PorcentajeAvance, new { 
                                    @class = "form-control",
                                    type = "number",
                                    step = "0.01",
                                    min = "0",
                                    max = "100",
                                    placeholder = "0.00",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.PorcentajeAvance, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Meta Planeada -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-bullseye me-2"></i>
                                    @Html.DisplayNameFor(model => model.MetaPlaneada)
                                </label>
                                @Html.TextBoxFor(model => model.MetaPlaneada, new { 
                                    @class = "form-control",
                                    type = "number",
                                    step = "0.01",
                                    placeholder = "0.00",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.MetaPlaneada, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Meta Ejecutada -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-check-circle me-2"></i>
                                    @Html.DisplayNameFor(model => model.MetaEjecutada)
                                </label>
                                @Html.TextBoxFor(model => model.MetaEjecutada, new { 
                                    @class = "form-control",
                                    type = "number",
                                    step = "0.01",
                                    placeholder = "0.00",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.MetaEjecutada, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Fecha Inicio -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-calendar-alt me-2"></i>
                                    @Html.DisplayNameFor(model => model.FechaInicio)
                                </label>
                                @Html.TextBoxFor(model => model.FechaInicio, "{0:yyyy-MM-dd}", new { 
                                    @class = "form-control",
                                    type = "date",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Fecha Fin -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-calendar-check me-2"></i>
                                    @Html.DisplayNameFor(model => model.FechaFin)
                                </label>
                                @Html.TextBoxFor(model => model.FechaFin, "{0:yyyy-MM-dd}", new { 
                                    @class = "form-control",
                                    type = "date",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Proyecto -->
                            @{
                                ViewData["fieldName"] = "ProyectoId";
                                ViewData["label"] = "Proyecto";
                                ViewData["options"] = ViewBag.Proyectos;
                                ViewData["selectedValue"] = Model?.ProyectoId.ToString();
                                ViewData["placeholder"] = "Seleccione un proyecto (opcional)";
                                ViewData["required"] = "False";
                                ViewData["icon"] = "fa-project-diagram";
                            }
                            @await Html.PartialAsync("_SimpleDropdown")

                            <!-- Responsable -->
                            @{
                                ViewData["fieldName"] = "ResponsableId";
                                ViewData["label"] = "Responsable";
                                ViewData["options"] = ViewBag.Responsables;
                                ViewData["selectedValue"] = Model?.ResponsableId?.ToString();
                                ViewData["placeholder"] = "Seleccione un responsable (opcional)";
                                ViewData["required"] = "False";
                                ViewData["icon"] = "fa-user-tie";
                            }
                            @await Html.PartialAsync("_SimpleDropdown")

                            <!-- Vigencia -->
                            @{
                                ViewData["fieldName"] = "VigenciaId";
                                ViewData["label"] = "Vigencia";
                                ViewData["options"] = ViewBag.Vigencias;
                                ViewData["selectedValue"] = Model?.VigenciaId?.ToString();
                                ViewData["placeholder"] = "Seleccione una vigencia (opcional)";
                                ViewData["required"] = "False";
                                ViewData["icon"] = "fa-calendar";
                            }
                            @await Html.PartialAsync("_SimpleDropdown")

                            <!-- Activo -->
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    <input type="checkbox" class="form-check-input" id="Activo" name="Activo" value="true" @(Model?.Activo == true ? "checked" : "") />
                                    <input type="hidden" name="Activo" value="false" />
                                    <label class="form-check-label" for="Activo">
                                        @Html.DisplayNameFor(model => model.Activo)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>@(isEdit ? "Guardar Cambios" : "Crear Actividad")
                            </button>
                        </div>
                    </form>
                </div>
            </article>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
