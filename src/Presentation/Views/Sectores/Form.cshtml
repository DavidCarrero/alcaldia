@model Proyecto_alcaldia.Application.ViewModels.SectorViewModel

@{
    var isEdit = Model?.Id > 0;
    var action = isEdit ? "Edit" : "Create";
    ViewData["Title"] = isEdit ? "Editar Sector" : "Nuevo Sector";
    Layout = "_LayoutDashboard";
}

<main class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("Planificación", null),
        ("Sectores", Url.Action("Index", "Sectores")),
        (isEdit ? "Editar Sector" : "Nuevo Sector", null)
    })

    <section class="row justify-content-center">
        <div class="col-lg-8">
            <article class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-layer-group me-2"></i>@(isEdit ? "Editar" : "Nuevo") Sector
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Errores de Validación</h5>
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <form asp-action="@action" asp-controller="Sectores" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        @if (isEdit)
                        {
                            @Html.HiddenFor(m => m.Id)
                        }
                        
                        <div class="row g-3">
                            <!-- Código -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-barcode me-2"></i>
                                    @Html.DisplayNameFor(model => model.Codigo)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Codigo, new { 
                                    @class = "form-control", 
                                    placeholder = "Ingrese el código",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Nombre -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-heading me-2"></i>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Nombre, new { 
                                    @class = "form-control", 
                                    placeholder = "Nombre del sector",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Descripción -->
                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-align-left me-2"></i>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </label>
                                @Html.TextAreaFor(model => model.Descripcion, new { 
                                    @class = "form-control", 
                                    rows = "3",
                                    placeholder = "Descripción del sector",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Aplicación -->
                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-tasks me-2"></i>
                                    @Html.DisplayNameFor(model => model.Aplicacion)
                                </label>
                                @Html.TextAreaFor(model => model.Aplicacion, new { 
                                    @class = "form-control", 
                                    rows = "3",
                                    placeholder = "Aplicación del sector",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Aplicacion, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Presupuesto Asignado -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-dollar-sign me-2"></i>
                                    @Html.DisplayNameFor(model => model.PresupuestoAsignado)
                                </label>
                                @Html.TextBoxFor(model => model.PresupuestoAsignado, new { 
                                    @class = "form-control",
                                    type = "number",
                                    step = "0.01",
                                    placeholder = "0.00",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.PresupuestoAsignado, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Línea Estratégica -->
                            @{
                                ViewData["fieldName"] = "LineaEstrategicaId";
                                ViewData["label"] = "Línea Estratégica";
                                ViewData["options"] = ViewBag.LineasEstrategicas;
                                ViewData["selectedValue"] = Model?.LineaEstrategicaId.ToString();
                                ViewData["placeholder"] = "Seleccione una línea estratégica (opcional)";
                                ViewData["required"] = "False";
                                ViewData["icon"] = "fa-compass";
                            }
                            @await Html.PartialAsync("_SimpleDropdown")

                            <!-- Activo -->
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    @Html.CheckBoxFor(model => model.Activo, new { @class = "form-check-input", @checked = Model?.Activo ?? true })
                                    <label class="form-check-label" for="Activo">
                                        @Html.DisplayNameFor(model => model.Activo)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>@(isEdit ? "Guardar Cambios" : "Crear Sector")
                            </button>
                        </div>
                    </form>
                </div>
            </article>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
