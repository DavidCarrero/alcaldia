@model List<(string Text, string? Url)>

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb bg-light rounded-3 px-4 py-3 shadow-sm">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Dashboard")" class="text-decoration-none">
                <i class="bi bi-house-door-fill me-1"></i>
                Inicio
            </a>
        </li>
        @foreach (var (index, item) in Model.Select((item, index) => (index, item)))
        {
            if (index == Model.Count - 1)
            {
                <li class="breadcrumb-item active fw-semibold" aria-current="page">
                    @item.Text
                </li>
            }
            else
            {
                <li class="breadcrumb-item">
                    @if (item.Url != null)
                    {
                        <a href="@item.Url" class="text-decoration-none">@item.Text</a>
                    }
                    else
                    {
                        @item.Text
                    }
                </li>
            }
        }
    </ol>
</nav>
