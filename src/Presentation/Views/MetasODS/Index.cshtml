@model IEnumerable<Proyecto_alcaldia.Application.ViewModels.MetaODSViewModel>

@{
    ViewData["Title"] = "Metas ODS";
    Layout = "_LayoutDashboard";
    
    // Obtener estadísticas desde ViewBag
    var totalMetasODS = ViewBag.TotalMetasODS ?? ViewBag.TotalCount ?? Model.Count();
    var metasODSActivas = ViewBag.MetasODSActivas ?? Model.Count(a => a.Activo);
    var odsAsociados = ViewBag.ODSAsociados ?? Model.Count();
}

<main class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
    ("Configuración", null),
        ("ODS", null),
        ("Metas ODS", null)
        })

    <header class="page-header mb-4">
        <div class="page-header-icon">
            <i class="fas fa-bullseye"></i>
        </div>
        <div class="page-header-content flex-grow-1">
            <h2>Metas ODS</h2>
            <p class="text-muted">Configure las metas asociadas a los Objetivos de Desarrollo Sostenible</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Nueva Meta ODS
            </a>
        </div>
    </header>

    <div class="row g-4 mb-4">
        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-bullseye fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Metas ODS</h6>
                            <h3 class="mb-0 fw-bold">@totalMetasODS</h3>
                            <small class="text-primary">Registradas</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Metas ODS Activas</h6>
                            <h3 class="mb-0 fw-bold">@metasODSActivas</h3>
                            <small class="text-success">En operación</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-globe fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">ODS Asociados</h6>
                            <h3 class="mb-0 fw-bold">@odsAsociados</h3>
                            <small class="text-info">Vinculados</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" id="searchForm">
                <input type="hidden" name="pageSize" value="@(ViewBag.PageSize ?? 5)" />
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" 
                           name="searchTerm" 
                           class="form-control border-start-0" 
                           placeholder="Buscar por código o nombre..."
                           value="@ViewData["SearchTerm"]"
                           onkeypress="if(event.key === 'Enter') { this.form.submit(); return false; }">
                </div>
            </form>
        </div>
    </section>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold">Listado de Metas ODS</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Alcaldía</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var meta in Model)
                            {
                                <tr>
                                    <td><span class="fw-bold">@meta.Codigo</span></td>
                                    <td>@meta.NitAlcaldia</td>
                                    <td>@meta.Nombre</td>
                                    <td>@meta.Descripcion</td>
                                    <td>
                                        @if (meta.Activo)
                                        {
                                            <span class="badge bg-success">ACTIVO</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">INACTIVO</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="action-buttons">
                                            <a asp-action="Edit" asp-route-id="@meta.Id" class="btn-action btn-edit"
                                                title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn-action btn-delete"
                                                onclick="confirmDelete('@Url.Action("Delete", "MetasODS", new { id = meta.Id })', '@meta.Codigo', '@Url.Action("Index", "MetasODS")')"
                                                title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <i class="fas fa-bullseye fa-4x text-muted mb-3 d-block"></i>
                                    <h5 class="text-muted">No hay resultados</h5>
                                    @if (!string.IsNullOrWhiteSpace(ViewData["SearchTerm"]?.ToString()))
                                    {
                                        <p class="text-muted mb-3">No se encontraron metas ODS que coincidan con "<strong>@ViewData["SearchTerm"]</strong>"</p>
                                        <a asp-action="Index" class="btn btn-outline-primary">
                                            <i class="fas fa-times me-1"></i>Limpiar búsqueda
                                        </a>
                                    }
                                    else
                                    {
                                        <p class="text-muted mb-3">No hay metas ODS registradas. Comience creando un nuevo registro.</p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Paginación -->
            @await Html.PartialAsync("_Pagination")
        </div>
    </div>
</main>

@section Scripts {
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <style>
        [x-cloak] { display: none !important; }

        /* Icono de encabezado */
        .alcaldia-icon-header {
            background: linear-gradient(135deg, var(--theme-primary, #0d6efd) 0%, var(--theme-primary-hover, #0b5ed7) 100%);
            width: 80px;
            height: 80px;
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
        }

        .alcaldia-icon-header i {
            color: white !important;
        }

        /* Efectos de hover en las cards */
        .card {
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
        }

        /* Efecto en las filas de la tabla */
        .table tbody tr {
            transition: all 0.2s ease;
        }

        .table tbody tr:hover {
            background-color: var(--theme-primary-light, rgba(13, 110, 253, 0.05));
            transform: scale(1.01);
        }

        /* Botones de acción */
        .btn-action {
            transition: all 0.2s ease;
        }

        .btn-action:hover {
            transform: scale(1.15);
        }

        /* Animación del logo */
        .table tbody tr td img,
        .table tbody tr td .bg-secondary {
            transition: all 0.3s ease;
        }

        .table tbody tr:hover td img,
        .table tbody tr:hover td .bg-secondary {
            transform: rotate(5deg) scale(1.1);
        }
    </style>
}
