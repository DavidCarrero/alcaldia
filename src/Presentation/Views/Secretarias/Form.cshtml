@model Proyecto_alcaldia.Application.ViewModels.SecretariaViewModel

@{
    var isEdit = Model?.Id > 0;
    ViewData["Title"] = isEdit ? "Editar Secretaría" : "Nueva Secretaría";
    Layout = "_LayoutDashboard";
    var action = isEdit ? "Edit" : "Create";
}

<main class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("Estructura Organizacional", null),
        ("Secretarías", Url.Action("Index", "Secretarias")),
        (isEdit ? "Editar Secretaría" : "Nueva Secretaría", null)
    })

    <section class="row justify-content-center">
        <div class="col-lg-8">
            <article class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas @(isEdit ? "fa-edit" : "fa-building") me-2"></i>@(isEdit ? "Editar" : "Nueva") Secretaría
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @Html.ValidationSummary(false, "", new { @class = "mb-0 list-unstyled" })
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="@action" method="post" class="needs-validation">
                        @Html.AntiForgeryToken()

                        @if (isEdit)
                        {
                            @Html.HiddenFor(m => m.Id)
                        }
                        
                        @Html.HiddenFor(m => m.AlcaldiaId)

                        <div class="row g-3">
                            <!-- Código -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-barcode me-1"></i>
                                    @Html.DisplayNameFor(model => model.Codigo)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Codigo, new { 
                                    @class = "form-control text-uppercase", 
                                    maxlength = "20",
                                    placeholder = "Código único",
                                    autocomplete = "off",
                                    id = "codigoInput"
                                })
                                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Nombre -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-tag me-1"></i>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Nombre, new { 
                                    @class = "form-control", 
                                    placeholder = "Ingrese el nombre de la secretaría",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Sigla -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-font me-1"></i>
                                    @Html.DisplayNameFor(model => model.Sigla)
                                </label>
                                @Html.TextBoxFor(model => model.Sigla, new { 
                                    @class = "form-control text-uppercase", 
                                    maxlength = "20",
                                    placeholder = "Sigla o acrónimo",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Sigla, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Secretario -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user-tie me-1"></i>
                                    @Html.DisplayNameFor(model => model.Secretario)
                                </label>
                                @Html.TextBoxFor(model => model.Secretario, new { 
                                    @class = "form-control", 
                                    placeholder = "Nombre del secretario",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Secretario, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Descripción -->
                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-align-left me-1"></i>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </label>
                                @Html.TextAreaFor(model => model.Descripcion, new { 
                                    @class = "form-control", 
                                    rows = 3,
                                    placeholder = "Descripción de la secretaría"
                                })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Teléfono -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-phone me-1"></i>
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </label>
                                @Html.TextBoxFor(model => model.Telefono, new { 
                                    @class = "form-control", 
                                    placeholder = "Teléfono de contacto",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Correo Institucional -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-envelope me-1"></i>
                                    @Html.DisplayNameFor(model => model.CorreoInstitucional)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-at"></i>
                                    </span>
                                    @Html.TextBoxFor(model => model.CorreoInstitucional, new { 
                                        @class = "form-control", 
                                        type = "email",
                                        placeholder = "correo@ejemplo.com",
                                        autocomplete = "off"
                                    })
                                </div>
                                @Html.ValidationMessageFor(model => model.CorreoInstitucional, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Presupuesto Asignado -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-money-bill-wave me-1"></i>
                                    @Html.DisplayNameFor(model => model.PresupuestoAsignado)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    @Html.TextBoxFor(model => model.PresupuestoAsignado, new { 
                                        @class = "form-control", 
                                        type = "number",
                                        step = "0.01",
                                        placeholder = "0.00",
                                        autocomplete = "off"
                                    })
                                </div>
                                @Html.ValidationMessageFor(model => model.PresupuestoAsignado, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Estado Activo -->
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    @Html.CheckBoxFor(model => model.Activo, new { @class = "form-check-input", @checked = Model?.Activo ?? true })
                                    <label class="form-check-label fw-bold">
                                        @Html.DisplayNameFor(model => model.Activo)
                                    </label>
                                </div>
                            </div>

                            <!-- Botones -->
                            <div class="col-12">
                                <hr class="my-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-times me-1"></i> Cancelar
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-1"></i> @(isEdit ? "Guardar Cambios" : "Guardar")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </article>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            var isEdit = @(isEdit ? "true" : "false");
            var codigoInput = $('#codigoInput');
            
            // Solo autocompletar si es creación y el campo está vacío
            if (!isEdit && !codigoInput.val()) {
                $.ajax({
                    url: '@Url.Action("GetNextId", "Secretarias")',
                    type: 'GET',
                    success: function(data) {
                        codigoInput.val(data.nextId);
                    },
                    error: function() {
                        console.log('Error al obtener siguiente ID');
                    }
                });
            }
        });
    </script>
}
