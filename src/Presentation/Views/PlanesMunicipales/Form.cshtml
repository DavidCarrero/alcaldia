@model Proyecto_alcaldia.Application.ViewModels.PlanMunicipalViewModel

@{
    var isEdit = Model?.Id > 0;
    var action = isEdit ? "Edit" : "Create";
    ViewData["Title"] = isEdit ? "Editar Plan Municipal" : "Nuevo Plan Municipal";
    Layout = "_LayoutDashboard";
}

<main class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("Configuración", null),
        ("Planes", null),
        ("Planes Municipales", Url.Action("Index", "PlanesMunicipales")),
        (isEdit ? "Editar" : "Nuevo", null)
    })

    <section class="row justify-content-center">
        <div class="col-lg-8">
            <article class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-city me-2"></i>@(isEdit ? "Editar" : "Nuevo") Plan Municipal
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Errores de Validación</h5>
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <form asp-action="@action" asp-controller="PlanesMunicipales" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        @if (isEdit)
                        {
                            @Html.HiddenFor(m => m.Id)
                        }
                        
                        <div class="row g-3">
                            <!-- Código -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-barcode me-2"></i>
                                    @Html.DisplayNameFor(model => model.Codigo)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Codigo, new { 
                                    @class = "form-control", 
                                    placeholder = "Código del plan",
                                    autocomplete = "off",
                                    maxlength = "20"
                                })
                                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Municipio -->
                            <div class="col-md-6">
                                @{
                                    ViewData["fieldName"] = "MunicipioId";
                                    ViewData["label"] = "Municipio";
                                    ViewData["options"] = ViewBag.Municipios;
                                    ViewData["selectedValue"] = Model?.MunicipioId?.ToString();
                                    ViewData["placeholder"] = "Seleccione un municipio";
                                    ViewData["required"] = "False";
                                    ViewData["icon"] = "fa-city";
                                }
                                @await Html.PartialAsync("_SimpleDropdown")
                            </div>

                            <!-- Nombre -->
                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-file-alt me-2"></i>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Nombre, new { 
                                    @class = "form-control", 
                                    placeholder = "Nombre del plan municipal",
                                    autocomplete = "off",
                                    maxlength = "200"
                                })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Descripción -->
                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-align-left me-2"></i>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </label>
                                @Html.TextAreaFor(model => model.Descripcion, new { 
                                    @class = "form-control", 
                                    rows = "4",
                                    placeholder = "Descripción del plan...",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Alcalde -->
                            <div class="col-md-6">
                                @{
                                    ViewData["fieldName"] = "AlcaldeId";
                                    ViewData["label"] = "Alcalde";
                                    ViewData["options"] = ViewBag.Alcaldes;
                                    ViewData["selectedValue"] = Model?.AlcaldeId?.ToString();
                                    ViewData["placeholder"] = "Seleccione un alcalde";
                                    ViewData["required"] = "False";
                                    ViewData["icon"] = "fa-user-tie";
                                }
                                @await Html.PartialAsync("_SimpleDropdown")
                            </div>

                            <!-- Plan Nacional -->
                            <div class="col-md-6">
                                @{
                                    ViewData["fieldName"] = "PlanNacionalId";
                                    ViewData["label"] = "Plan Nacional";
                                    ViewData["options"] = ViewBag.PlanesNacionales;
                                    ViewData["selectedValue"] = Model?.PlanNacionalId?.ToString();
                                    ViewData["placeholder"] = "Seleccione un plan nacional";
                                    ViewData["required"] = "False";
                                    ViewData["icon"] = "fa-flag";
                                }
                                @await Html.PartialAsync("_SimpleDropdown")
                            </div>

                            <!-- Plan Departamental -->
                            <div class="col-12">
                                @{
                                    ViewData["fieldName"] = "PlanDptlId";
                                    ViewData["label"] = "Plan Departamental";
                                    ViewData["options"] = ViewBag.PlanesDepartamentales;
                                    ViewData["selectedValue"] = Model?.PlanDptlId?.ToString();
                                    ViewData["placeholder"] = "Seleccione un plan departamental";
                                    ViewData["required"] = "False";
                                    ViewData["icon"] = "fa-map-marked-alt";
                                }
                                @await Html.PartialAsync("_SimpleDropdown")
                            </div>

                            <!-- Fecha Inicio -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-calendar-alt me-2"></i>
                                    @Html.DisplayNameFor(model => model.FechaInicio)
                                </label>
                                @Html.TextBoxFor(model => model.FechaInicio, "{0:yyyy-MM-dd}", new { 
                                    @class = "form-control", 
                                    type = "date"
                                })
                                @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Fecha Fin -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-calendar-check me-2"></i>
                                    @Html.DisplayNameFor(model => model.FechaFin)
                                </label>
                                @Html.TextBoxFor(model => model.FechaFin, "{0:yyyy-MM-dd}", new { 
                                    @class = "form-control", 
                                    type = "date"
                                })
                                @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Activo -->
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    @Html.CheckBoxFor(model => model.Activo, new { @class = "form-check-input", @checked = Model?.Activo ?? true })
                                    <label class="form-check-label" for="Activo">
                                        <i class="fas fa-toggle-on me-2"></i>Plan Municipal Activo
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Botones de acción -->
                        <div class="d-flex gap-2 justify-content-end mt-4 pt-3 border-top">
                            <a asp-action="Index" asp-controller="PlanesMunicipales" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>@(isEdit ? "Actualizar" : "Guardar")
                            </button>
                        </div>
                    </form>
                </div>
            </article>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
