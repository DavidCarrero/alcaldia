@model Proyecto_alcaldia.Application.ViewModels.RolViewModel

@{
    var isEdit = Model?.Id > 0;
    var action = isEdit ? "Edit" : "Create";
    ViewData["Title"] = isEdit ? "Editar Rol" : "Crear Rol";
    Layout = "_LayoutDashboard";
}

<main class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("Administración", null),
        ("Roles", Url.Action("Index", "Roles")),
        (isEdit ? "Editar Rol" : "Nuevo Rol", null)
    })

    <section class="row justify-content-center">
        <div class="col-lg-8">
            <article class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-user-shield me-2"></i>@(isEdit ? "Editar" : "Crear Nuevo") Rol
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="@action" asp-controller="Roles" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        @if (isEdit)
                        {
                            @Html.HiddenFor(m => m.Id)
                        }
                        
                        <div class="row g-3 mb-4">
                            <!-- Nombre del Rol -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-tag me-2"></i>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Nombre, new { 
                                    @class = "form-control", 
                                    placeholder = "Ej: Administrador, Secretario, etc.",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Estado Activo -->
                            <div class="col-md-6 d-flex align-items-end">
                                <div class="form-check form-switch">
                                    @Html.CheckBoxFor(model => model.Activo, new { 
                                        @class = "form-check-input", 
                                        role = "switch",
                                        id = "activoSwitch",
                                        @checked = Model?.Activo ?? true
                                    })
                                    <label class="form-check-label fw-bold" for="activoSwitch">
                                        @Html.DisplayNameFor(model => model.Activo)
                                    </label>
                                </div>
                            </div>

                            <!-- Descripción -->
                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-align-left me-2"></i>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </label>
                                @Html.TextAreaFor(model => model.Descripcion, new { 
                                    @class = "form-control", 
                                    rows = "3",
                                    placeholder = "Descripción del rol y sus responsabilidades..."
                                })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Matriz de Permisos -->
                        <div class="mb-4">
                            <h5 class="fw-bold mb-3">
                                <i class="fas fa-key me-2 text-primary"></i>Permisos por Módulo
                            </h5>
                            <p class="text-muted">Configure los permisos de acceso para este rol en cada módulo del sistema.</p>

                            <div class="table-responsive">
                                <table class="table table-bordered table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 35%">Módulo</th>
                                            <th class="text-center" style="width: 13%">
                                                <i class="fas fa-eye me-1"></i>Ver
                                            </th>
                                            <th class="text-center" style="width: 13%">
                                                <i class="fas fa-plus me-1"></i>Crear
                                            </th>
                                            <th class="text-center" style="width: 13%">
                                                <i class="fas fa-edit me-1"></i>Editar
                                            </th>
                                            <th class="text-center" style="width: 13%">
                                                <i class="fas fa-trash me-1"></i>Eliminar
                                            </th>
                                            <th class="text-center" style="width: 13%">
                                                <input type="checkbox" id="selectAll" title="Seleccionar todo">
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var modulos = new List<(string Key, string Nombre, string Icono, string Color)>
                                            {
                                                ("PlanDesarrollo", "Plan de Desarrollo Municipal", "fas fa-map-marked-alt", "#3498db"),
                                                ("Hacienda", "Hacienda y Presupuesto", "fas fa-coins", "#2ecc71"),
                                                ("Impuestos", "Impuestos y Recaudos", "fas fa-file-invoice-dollar", "#e74c3c"),
                                                ("Proyectos", "Proyectos y Obras", "fas fa-project-diagram", "#f39c12"),
                                                ("Usuarios", "Gestión de Usuarios", "fas fa-users-cog", "#9b59b6")
                                            };

                                            int index = 0;
                                            foreach (var modulo in modulos)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="module-icon me-2" style="background: @modulo.Color">
                                                                <i class="@modulo.Icono"></i>
                                                            </div>
                                                            <strong>@modulo.Nombre</strong>
                                                        </div>
                                                    </td>
                                                    <td class="text-center">
                                                        @Html.CheckBox($"PermisosModulo[{index}].Ver", false, new { @class = "form-check-input permission-checkbox" })
                                                    </td>
                                                    <td class="text-center">
                                                        @Html.CheckBox($"PermisosModulo[{index}].Crear", false, new { @class = "form-check-input permission-checkbox" })
                                                    </td>
                                                    <td class="text-center">
                                                        @Html.CheckBox($"PermisosModulo[{index}].Editar", false, new { @class = "form-check-input permission-checkbox" })
                                                    </td>
                                                    <td class="text-center">
                                                        @Html.CheckBox($"PermisosModulo[{index}].Eliminar", false, new { @class = "form-check-input permission-checkbox" })
                                                    </td>
                                                    <td class="text-center">
                                                        <input type="checkbox" class="form-check-input select-row" data-row="@index">
                                                    </td>
                                                </tr>
                                                @Html.Hidden($"PermisosModulo[{index}].NombreModulo", modulo.Key)
                                                index++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="alert alert-info mt-3">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Nota:</strong> Use la columna de la derecha para seleccionar todos los permisos de un módulo.
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>@(isEdit ? "Guardar Cambios" : "Crear Rol")
                            </button>
                        </div>
                    </form>
                </div>
            </article>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Seleccionar/deseleccionar todos los permisos
            $('#selectAll').change(function() {
                $('.permission-checkbox').prop('checked', $(this).prop('checked'));
                $('.select-row').prop('checked', $(this).prop('checked'));
            });

            // Seleccionar/deseleccionar permisos por fila
            $('.select-row').change(function() {
                var row = $(this).data('row');
                var isChecked = $(this).prop('checked');
                
                $(`input[name^="PermisosModulo[${row}]"]`).each(function() {
                    if (!$(this).is('[type="hidden"]')) {
                        $(this).prop('checked', isChecked);
                    }
                });

                updateSelectAllState();
            });

            // Actualizar estado del checkbox "Seleccionar todo"
            $('.permission-checkbox').change(function() {
                updateSelectAllState();
            });

            function updateSelectAllState() {
                var total = $('.permission-checkbox').length;
                var checked = $('.permission-checkbox:checked').length;
                $('#selectAll').prop('checked', total === checked);
            }
        });
    </script>

    <style>
        .module-icon {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .form-check-input {
            cursor: pointer;
            width: 1.5em;
            height: 1.5em;
        }
    </style>
}
