@model IEnumerable<Proyecto_alcaldia.Application.ViewModels.LineaEstrategicaViewModel>

@{
    ViewData["Title"] = "Líneas Estratégicas";
    Layout = "_LayoutDashboard";
    
    // Obtener estadísticas desde ViewBag
    var totalLineas = ViewBag.TotalLineas ?? ViewBag.TotalCount ?? Model.Count();
    var sectoresVinculados = ViewBag.SectoresVinculados ?? Model.Sum(l => (int?)l.CantidadSectores ?? 0);
    var promedioSectores = ViewBag.PromedioSectores ?? (Model.Any() ? Math.Round(Model.Average(l => (int?)l.CantidadSectores ?? 0), 1) : 0);
}

<main class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("Planificación", null),
        ("Líneas Estratégicas", null)
    })

    <!-- Encabezado con Icono -->
    <header class="page-header mb-4">
        <div class="page-header-icon">
            <i class="fas fa-compass"></i>
        </div>
        <div class="page-header-content flex-grow-1">
            <h2>Líneas Estratégicas</h2>
            <p class="text-muted">Gestione las líneas estratégicas del plan de desarrollo</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Nueva Línea Estratégica
            </a>
        </div>
    </header>

    <!-- Tarjetas de Estadísticas -->
    <section class="row g-4 mb-4" aria-label="Estadísticas de líneas estratégicas">
        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-compass fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Líneas Estratégicas</h6>
                            <h3 class="mb-0 fw-bold">@totalLineas</h3>
                            <small class="text-primary">Registradas</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-chart-line fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Sectores Vinculados</h6>
                            <h3 class="mb-0 fw-bold">@sectoresVinculados</h3>
                            <small class="text-success">Total sectores</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-list-check fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Promedio de Sectores</h6>
                            <h3 class="mb-0 fw-bold">@promedioSectores</h3>
                            <small class="text-info">Por línea</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Barra de Búsqueda -->
    <section class="card border-0 shadow-sm mb-4" aria-label="Búsqueda de líneas estratégicas">
        <div class="card-body">
            <form asp-action="Index" method="get" id="searchForm">
                <input type="hidden" name="pageSize" value="@(ViewBag.PageSize ?? 5)" />
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" 
                           name="searchTerm" 
                           class="form-control border-start-0" 
                           placeholder="Buscar por código, nombre o sigla..."
                           value="@ViewData["SearchTerm"]"
                           onkeypress="if(event.key === 'Enter') { this.form.submit(); return false; }">
                </div>
            </form>
        </div>
    </section>

    <!-- Tabla de Líneas Estratégicas -->
    <section class="card border-0 shadow-sm" aria-label="Listado de líneas estratégicas">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold">Listado de Líneas Estratégicas</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Sigla</th>
                            <th>Descripción</th>
                            <th>Alcaldía</th>
                            <th class="text-center">Sectores</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var linea in Model)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary">@linea.Codigo</span></td>
                                    <td><span class="fw-bold">@linea.Nombre</span></td>
                                    <td>@linea.Sigla</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(linea.Descripcion))
                                        {
                                            <span>@(linea.Descripcion.Length > 50 ? linea.Descripcion.Substring(0, 50) + "..." : linea.Descripcion)</span>
                                        }
                                    </td>
                                    <td>@linea.MunicipioAlcaldia</td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@(linea.CantidadSectores)</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="action-buttons">
                                            <a asp-action="Edit" asp-route-id="@linea.Id" 
                                               class="btn-action btn-edit" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn-action btn-delete" 
                                                    onclick="confirmDelete('@Url.Action("Delete", "LineasEstrategicas", new { id = linea.Id })', '@linea.Codigo', '@Url.Action("Index", "LineasEstrategicas")')"
                                                    title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5">
                                    <i class="fas fa-compass fa-4x text-muted mb-3 d-block"></i>
                                    <h5 class="text-muted">No hay resultados</h5>
                                    @if (!string.IsNullOrWhiteSpace(ViewData["SearchTerm"]?.ToString()))
                                    {
                                        <p class="text-muted mb-3">No se encontraron líneas estratégicas que coincidan con "<strong>@ViewData["SearchTerm"]</strong>"</p>
                                        <a asp-action="Index" class="btn btn-outline-primary">
                                            <i class="fas fa-times me-1"></i>Limpiar búsqueda
                                        </a>
                                    }
                                    else
                                    {
                                        <p class="text-muted mb-3">No hay líneas estratégicas registradas. Comience creando un nuevo registro.</p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Paginación -->
            @await Html.PartialAsync("_Pagination")
        </div>
    </section>
</main>

@section Scripts {
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <style>
        [x-cloak] { display: none !important; }

        .card {
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
        }

        .table tbody tr {
            transition: all 0.2s ease;
        }

        .table tbody tr:hover {
            background-color: var(--theme-primary-light, rgba(13, 110, 253, 0.05));
            transform: scale(1.01);
        }

        .btn-action {
            transition: all 0.2s ease;
        }

        .btn-action:hover {
            transform: scale(1.15);
        }
    </style>
}
