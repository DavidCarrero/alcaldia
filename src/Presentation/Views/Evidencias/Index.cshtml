@model IEnumerable<Proyecto_alcaldia.Application.ViewModels.EvidenciaViewModel>

@{
    ViewData["Title"] = "Evidencias";
    Layout = "_LayoutDashboard";
}

<main class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("Ejecución", null),
        ("Evidencias", null)
    })

    <!-- Encabezado con Icono -->
    <header class="page-header mb-4">
        <div class="page-header-icon">
            <i class="fas fa-file-invoice"></i>
        </div>
        <div class="page-header-content flex-grow-1">
            <h2>Evidencias</h2>
            <p class="text-muted">Gestione las evidencias de las actividades</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Nueva Evidencia
            </a>
        </div>
    </header>

    <!-- Tarjetas de Estadísticas -->
    <section class="row g-4 mb-4" aria-label="Estadísticas de evidencias">
        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-file-invoice fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Evidencias</h6>
                            <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                            <small class="text-primary">Registradas</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-check-double fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Evidencias Activas</h6>
                            <h3 class="mb-0 fw-bold">@Model.Count(e => e.Activo)</h3>
                            <small class="text-success">En el sistema</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-database fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Tamaño Total</h6>
                            <h3 class="mb-0 fw-bold">@((Model.Sum(e => e.TamanoBytes ?? 0) / (1024.0 * 1024.0)).ToString("N2")) MB</h3>
                            <small class="text-info">Almacenado</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Barra de Búsqueda -->
    <section class="card border-0 shadow-sm mb-4" aria-label="Búsqueda de evidencias">
        <div class="card-body">
            <form asp-action="Index" method="get" id="searchForm">
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" 
                           name="searchTerm" 
                           class="form-control border-start-0" 
                           placeholder="Buscar por código o nombre..."
                           value="@ViewData["SearchTerm"]"
                           onkeypress="if(event.key === 'Enter') { this.form.submit(); return false; }">
                </div>
            </form>
        </div>
    </section>

    <!-- Tabla de Evidencias -->
    <section class="card border-0 shadow-sm" aria-label="Listado de evidencias">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold">Listado de Evidencias</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Actividad</th>
                            <th>Tipo</th>
                            <th>Archivo</th>
                            <th>Tamaño</th>
                            <th>Fecha</th>
                            <th>Verificada</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var evidencia in Model)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@evidencia.Codigo</span></td>
                                <td><span class="fw-bold">@evidencia.Nombre</span></td>
                                <td>@evidencia.NombreActividad</td>
                                <td>@evidencia.TipoEvidencia</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(evidencia.NombreArchivo))
                                    {
                                        <span class="text-truncate d-inline-block" style="max-width: 150px;" title="@evidencia.NombreArchivo">
                                            <i class="fas fa-file me-1"></i>@evidencia.NombreArchivo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@((evidencia.TamanoBytes.HasValue ? (evidencia.TamanoBytes.Value / 1024.0).ToString("N2") + " KB" : "-"))</td>
                                <td>@(evidencia.FechaCaptura?.ToString("dd/MM/yyyy") ?? "-")</td>
                                <td>
                                    @if (evidencia.Activo)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check"></i> Activa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="fas fa-times"></i> Inactiva</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@evidencia.Id" 
                                           class="btn-action btn-edit" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn-action btn-delete" 
                                                onclick="confirmDelete('@Url.Action("Delete", "Evidencias", new { id = evidencia.Id })', '@evidencia.Codigo', '@Url.Action("Index", "Evidencias")')"
                                                title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <style>
        [x-cloak] { display: none !important; }

        .card {
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
        }

        .table tbody tr {
            transition: all 0.2s ease;
        }

        .table tbody tr:hover {
            background-color: var(--theme-primary-light, rgba(13, 110, 253, 0.05));
            transform: scale(1.01);
        }

        .btn-action {
            transition: all 0.2s ease;
        }

        .btn-action:hover {
            transform: scale(1.15);
        }
    </style>
}
