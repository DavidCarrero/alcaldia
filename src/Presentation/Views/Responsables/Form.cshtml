@model Proyecto_alcaldia.Application.ViewModels.ResponsableViewModel

@{
    var isEdit = Model?.Id > 0;
    var action = isEdit ? "Edit" : "Create";
    ViewData["Title"] = isEdit ? "Editar Responsable" : "Nuevo Responsable";
    Layout = "_LayoutDashboard";
}

<main class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("Estructura Organizacional", null),
        ("Responsables", Url.Action("Index", "Responsables")),
        (isEdit ? "Editar Responsable" : "Nuevo Responsable", null)
    })

    <section class="row justify-content-center">
        <div class="col-lg-8">
            <article class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>@(isEdit ? "Editar" : "Nuevo") Responsable
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="@action" asp-controller="Responsables" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.AlcaldiaId)
                        @if (isEdit)
                        {
                            @Html.HiddenFor(m => m.Id)
                        }
                        
                        <div class="row g-3">
                            <!-- Código -->
                            <div class="col-md-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-barcode me-1"></i>
                                    Código
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Id, new { 
                                    @class = "form-control", 
                                    placeholder = "Código único",
                                    autocomplete = "off",
                                    id = "codigoInput",
                                    type = "number"
                                })
                                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Tipo de Documento -->
                            <div class="col-md-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-id-card me-1"></i>
                                    @Html.DisplayNameFor(model => model.TipoDocumento)
                                </label>
                                @Html.DropDownListFor(model => model.TipoDocumento, 
                                    new SelectList(new[] { "CC", "CE", "TI", "PP" }), 
                                    "Seleccione...", 
                                    new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.TipoDocumento, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Número de Identificación -->
                            <div class="col-md-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-hashtag me-1"></i>
                                    @Html.DisplayNameFor(model => model.NumeroIdentificacion)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.NumeroIdentificacion, new { 
                                    @class = "form-control", 
                                    placeholder = "Número de identificación",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.NumeroIdentificacion, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Nombre Completo -->
                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user me-1"></i>
                                    @Html.DisplayNameFor(model => model.NombreCompleto)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.NombreCompleto, new { 
                                    @class = "form-control", 
                                    placeholder = "Nombre completo del responsable",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.NombreCompleto, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Cargo -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-briefcase me-1"></i>
                                    @Html.DisplayNameFor(model => model.Cargo)
                                </label>
                                @Html.TextBoxFor(model => model.Cargo, new { 
                                    @class = "form-control", 
                                    placeholder = "Cargo del responsable",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Cargo, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Tipo de Responsable -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user-tag me-1"></i>
                                    @Html.DisplayNameFor(model => model.TipoResponsable)
                                </label>
                                @Html.DropDownListFor(model => model.TipoResponsable, 
                                    new SelectList(new[] { "Jefe", "Coord", "Aux" }), 
                                    "Seleccione...", 
                                    new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.TipoResponsable, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Teléfono -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-phone me-1"></i>
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </label>
                                @Html.TextBoxFor(model => model.Telefono, new { 
                                    @class = "form-control", 
                                    placeholder = "Teléfono de contacto",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Email -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-envelope me-1"></i>
                                    @Html.DisplayNameFor(model => model.Email)
                                </label>
                                @Html.TextBoxFor(model => model.Email, new { 
                                    @class = "form-control", 
                                    type = "email",
                                    placeholder = "correo@ejemplo.com",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>



                            <!-- Subsecretarías -->
                            <div class="col-12">
                                @{
                                    ViewData["fieldName"] = "subsecretariasIds";
                                    ViewData["label"] = "Subsecretarías";
                                    ViewData["options"] = ViewBag.Subsecretarias;
                                    ViewData["selectedValues"] = ViewBag.SubsecretariasIds;
                                    ViewData["placeholder"] = "Seleccione una o más subsecretarías";
                                    ViewData["icon"] = "fa-sitemap";
                                }
                                @await Html.PartialAsync("_SimpleMultiDropdown")
                            </div>

                            <!-- Estado Activo -->
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    @Html.CheckBoxFor(model => model.Activo, new { @class = "form-check-input", @checked = Model?.Activo ?? true })
                                    <label class="form-check-label fw-bold">
                                        @Html.DisplayNameFor(model => model.Activo)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>@(isEdit ? "Guardar Cambios" : "Crear Responsable")
                            </button>
                        </div>
                    </form>
                </div>
            </article>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    
    <script>
        $(document).ready(function() {
            var isEdit = @(isEdit ? "true" : "false");
            var codigoInput = $('#codigoInput');
            
            // Solo autocompletar si es creación y el campo está vacío o es 0
            if (!isEdit && (!codigoInput.val() || codigoInput.val() === '0' || parseInt(codigoInput.val()) === 0)) {
                $.ajax({
                    url: '@Url.Action("GetNextId", "Responsables")',
                    type: 'GET',
                    success: function(data) {
                        if (data && data.nextId) {
                            codigoInput.val(data.nextId);
                        }
                    },
                    error: function() {
                        console.log('Error al obtener siguiente ID');
                    }
                });
            }
        });
    </script>
}
