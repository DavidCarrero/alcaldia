@model IEnumerable<Proyecto_alcaldia.Application.ViewModels.ResponsableViewModel>

@{
    ViewData["Title"] = "Gestión de Responsables";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid" x-data="{ searchTerm: '' }">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("Estructura Organizacional", null),
        ("Responsables", null)
    })

    <!-- Encabezado con Icono -->
    <div class="page-header mb-4">
        <div class="page-header-icon">
            <i class="fas fa-user-tie"></i>
        </div>
        <div class="page-header-content flex-grow-1">
            <h2>Gestión de Responsables</h2>
            <p class="text-muted">Administración de responsables por secretaría</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Nuevo Responsable
            </a>
        </div>
    </div>

    <!-- Tarjetas de Estadísticas -->
    <div class="row g-4 mb-4">
        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Responsables</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.TotalActivos</h3>
                            <small class="text-primary">Activos</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-briefcase fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Con Secretaría</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.ConSecretaria</h3>
                            <small class="text-success">Asignados</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-user-tag fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Tipos de Responsable</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.TiposResponsable</h3>
                            <small class="text-info">Categorías</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Responsables -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Lista de Responsables</h5>
                </div>
                <div class="col-auto">
                    <input type="text" 
                           class="form-control" 
                           x-model="searchTerm"
                           placeholder="Buscar responsable...">
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Responsable</th>
                            <th>Documento</th>
                            <th>Cargo</th>
                            <th>Secretaría</th>
                            <th>Alcaldía</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var responsable in Model)
                        {
                            <tr x-show="searchTerm === '' || 
                                       '@responsable.NombreCompleto'.toLowerCase().includes(searchTerm.toLowerCase()) || 
                                       '@responsable.NumeroIdentificacion'.toLowerCase().includes(searchTerm.toLowerCase())" 
                                x-cloak>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar user-avatar-primary me-2">
                                            @responsable.NombreCompleto.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-bold">@responsable.NombreCompleto</div>
                                            @if (!string.IsNullOrEmpty(responsable.Email))
                                            {
                                                <small class="text-muted">@responsable.Email</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>@responsable.TipoDocumento</div>
                                    <small class="text-muted">@responsable.NumeroIdentificacion</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(responsable.Cargo))
                                    {
                                        <span class="badge badge-gradient bg-info">@responsable.Cargo</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(responsable.NombreSecretaria))
                                    {
                                        @responsable.NombreSecretaria
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin asignar</span>
                                    }
                                </td>
                                <td>
                                    <div>@responsable.MunicipioAlcaldia</div>
                                    <small class="text-muted">@responsable.NitAlcaldia</small>
                                </td>
                                <td>
                                    @if (responsable.Activo)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@responsable.Id" 
                                           class="btn-action btn-edit" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn-action btn-delete" 
                                                onclick="confirmDelete('@Url.Action("Delete", "Responsables", new { id = responsable.Id })', '@responsable.NombreCompleto', '@Url.Action("Index", "Responsables")')"
                                                title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <style>
        [x-cloak] { display: none !important; }
    </style>
}
