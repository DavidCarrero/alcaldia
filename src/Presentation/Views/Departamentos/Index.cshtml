@model IEnumerable<Proyecto_alcaldia.Application.ViewModels.DepartamentoViewModel>

@{
    ViewData["Title"] = "Departamentos";
    Layout = "_LayoutDashboard";
    
    // Obtener estadísticas desde ViewBag
    var totalDepartamentos = ViewBag.TotalDepartamentos ?? ViewBag.TotalCount ?? Model.Count();
    var activos = ViewBag.Activos ?? Model.Count(d => d.Activo);
    var totalMunicipios = ViewBag.TotalMunicipios ?? Model.Sum(d => d.CantidadMunicipios);
}

<main class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("División Territorial", null),
        ("Departamentos", null)
    })

    <!-- Encabezado con Icono -->
    <header class="page-header mb-4">
        <div class="page-header-icon">
            <i class="fas fa-map-marked-alt"></i>
        </div>
        <div class="page-header-content flex-grow-1">
            <h2>Gestión de Departamentos</h2>
            <p class="text-muted">Administración de departamentos y divisiones territoriales</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Nuevo Departamento
            </a>
        </div>
    </div>

    <!-- Tarjetas de Estadísticas -->
    <div class="row g-4 mb-4">
        <div class="col-xl-4 col-md-6">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon stat-icon-primary text-white">
                                <i class="fas fa-map-marked-alt"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="stat-label">Total Departamentos</h6>
                            <h3 class="stat-value">@totalDepartamentos</h3>
                            <small class="stat-description text-primary">Registrados</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon stat-icon-success text-white">
                                <i class="fas fa-check-circle"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="stat-label">Activos</h6>
                            <h3 class="stat-value">@activos</h3>
                            <small class="stat-description text-success">En operación</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon stat-icon-info text-white">
                                <i class="fas fa-city"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="stat-label">Total Municipios</h6>
                            <h3 class="stat-value">@totalMunicipios</h3>
                            <small class="stat-description text-info">Asociados</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card content-card">
        <div class="card-header content-card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-map me-2"></i>
                Lista de Departamentos
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" id="searchForm">
                <input type="hidden" name="pageSize" value="@(ViewBag.PageSize ?? 5)" />
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" 
                           name="searchTerm" 
                           class="form-control border-start-0" 
                           placeholder="Buscar por código o nombre..."
                           value="@ViewData["SearchTerm"]"
                           onkeypress="if(event.key === 'Enter') { this.form.submit(); return false; }">
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Municipios</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var departamento in Model)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary">@departamento.Codigo</span></td>
                                    <td>@departamento.Nombre</td>
                                    <td>
                                        <span class="badge bg-info">@departamento.CantidadMunicipios</span>
                                    </td>
                                    <td>
                                        @if (departamento.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="action-buttons">
                                            <a asp-action="Edit" asp-route-id="@departamento.Id" 
                                               class="btn-action btn-edit" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn-action btn-delete" 
                                                    title="Eliminar"
                                                    onclick="confirmDelete('@Url.Action("Delete", new { id = departamento.Id })', '@departamento.Nombre', '@Url.Action("Index")')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <i class="fas fa-map-marked-alt fa-4x text-muted mb-3 d-block"></i>
                                    <h5 class="text-muted">No hay resultados</h5>
                                    @if (!string.IsNullOrWhiteSpace(ViewData["SearchTerm"]?.ToString()))
                                    {
                                        <p class="text-muted mb-3">No se encontraron departamentos que coincidan con "<strong>@ViewData["SearchTerm"]</strong>"</p>
                                        <a asp-action="Index" class="btn btn-outline-primary">
                                            <i class="fas fa-times me-1"></i>Limpiar búsqueda
                                        </a>
                                    }
                                    else
                                    {
                                        <p class="text-muted mb-3">No hay departamentos registrados. Comience creando un nuevo registro.</p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Paginación -->
            @await Html.PartialAsync("_Pagination")
        </div>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
}
