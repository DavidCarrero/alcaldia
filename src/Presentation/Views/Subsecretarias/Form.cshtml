@model Proyecto_alcaldia.Application.ViewModels.SubsecretariaViewModel

@{
    var isEdit = Model?.Id > 0;
    var action = isEdit ? "Edit" : "Create";
    ViewData["Title"] = isEdit ? "Editar Subsecretaría" : "Nueva Subsecretaría";
    Layout = "_LayoutDashboard";
}

<main class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("Estructura Organizacional", null),
        ("Subsecretarías", Url.Action("Index", "Subsecretarias")),
        (isEdit ? "Editar Subsecretaría" : "Nueva Subsecretaría", null)
    })

    <section class="row justify-content-center">
        <div class="col-lg-8">
            <article class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-sitemap me-2"></i>@(isEdit ? "Editar" : "Nueva") Subsecretaría
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @Html.ValidationSummary(false, "", new { @class = "mb-0 list-unstyled" })
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="@action" asp-controller="Subsecretarias" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.AlcaldiaId)
                        @if (isEdit)
                        {
                            @Html.HiddenFor(m => m.Id)
                        }
                        
                        <div class="row g-3">
                            <!-- Código -->
                            <div class="col-md-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-barcode me-1"></i>
                                    @Html.DisplayNameFor(model => model.Codigo)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Codigo, new { 
                                    @class = "form-control text-uppercase", 
                                    placeholder = "Código único",
                                    maxlength = "20",
                                    autocomplete = "off",
                                    id = "codigoInput"
                                })
                                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Nombre -->
                            <div class="col-md-8">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-tag me-1"></i>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Nombre, new { 
                                    @class = "form-control", 
                                    placeholder = "Nombre de la subsecretaría",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Descripción -->
                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-align-left me-1"></i>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </label>
                                @Html.TextAreaFor(model => model.Descripcion, new { 
                                    @class = "form-control", 
                                    rows = "3",
                                    placeholder = "Descripción de funciones y responsabilidades",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Secretarías (Multi-select) -->
                            @{
                                ViewData["fieldName"] = "secretariasIds";
                                ViewData["label"] = "Secretarías";
                                ViewData["options"] = ViewBag.Secretarias;
                                ViewData["selectedValues"] = Model?.SecretariasIds;
                                ViewData["placeholder"] = "Seleccione una o más secretarías";
                                ViewData["required"] = "False";
                                ViewData["icon"] = "fa-building";
                            }
                            @await Html.PartialAsync("_SimpleMultiDropdown")

                            <!-- Responsables (Multi-select) -->
                            @{
                                ViewData["fieldName"] = "responsablesIds";
                                ViewData["label"] = "Responsables";
                                ViewData["options"] = ViewBag.Responsables;
                                ViewData["selectedValues"] = Model?.ResponsablesIds;
                                ViewData["placeholder"] = "Seleccione uno o más responsables";
                                ViewData["required"] = "False";
                                ViewData["icon"] = "fa-user-tie";
                            }
                            @await Html.PartialAsync("_SimpleMultiDropdown")

                            <!-- Teléfono -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-phone me-1"></i>
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </label>
                                @Html.TextBoxFor(model => model.Telefono, new { 
                                    @class = "form-control", 
                                    placeholder = "Teléfono de contacto",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Correo Institucional -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-envelope me-1"></i>
                                    @Html.DisplayNameFor(model => model.CorreoInstitucional)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-at"></i>
                                    </span>
                                    @Html.TextBoxFor(model => model.CorreoInstitucional, new { 
                                        @class = "form-control", 
                                        type = "email",
                                        placeholder = "correo@ejemplo.com",
                                        autocomplete = "off"
                                    })
                                </div>
                                @Html.ValidationMessageFor(model => model.CorreoInstitucional, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Presupuesto Asignado -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-money-bill-wave me-1"></i>
                                    @Html.DisplayNameFor(model => model.PresupuestoAsignado)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    @Html.TextBoxFor(model => model.PresupuestoAsignado, new { 
                                        @class = "form-control", 
                                        type = "number",
                                        step = "0.01",
                                        placeholder = "0.00",
                                        autocomplete = "off"
                                    })
                                </div>
                                @Html.ValidationMessageFor(model => model.PresupuestoAsignado, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Estado Activo -->
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    @Html.CheckBoxFor(model => model.Activo, new { @class = "form-check-input", @checked = Model?.Activo ?? true })
                                    <label class="form-check-label fw-bold">
                                        @Html.DisplayNameFor(model => model.Activo)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>@(isEdit ? "Guardar Cambios" : "Crear Subsecretaría")
                            </button>
                        </div>
                    </form>
                </div>
            </article>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    
    <script>
        $(document).ready(function() {
            var isEdit = @(isEdit ? "true" : "false");
            var codigoInput = $('#codigoInput');
            
            // Solo autocompletar si es creación y el campo está vacío
            if (!isEdit && !codigoInput.val()) {
                $.ajax({
                    url: '@Url.Action("GetNextId", "Subsecretarias")',
                    type: 'GET',
                    success: function(data) {
                        codigoInput.val(data.nextId);
                    },
                    error: function() {
                        console.log('Error al obtener siguiente ID');
                    }
                });
            }
        });
    </script>
}
