@model Proyecto_alcaldia.Application.ViewModels.SubsecretariaViewModel

@{
    var isEdit = Model?.Id > 0;
    var action = isEdit ? "Edit" : "Create";
    ViewData["Title"] = isEdit ? "Editar Subsecretaría" : "Nueva Subsecretaría";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("Estructura Organizacional", null),
        ("Subsecretarías", Url.Action("Index", "Subsecretarias")),
        (isEdit ? "Editar Subsecretaría" : "Nueva Subsecretaría", null)
    })

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-sitemap me-2"></i>@(isEdit ? "Editar" : "Nueva") Subsecretaría
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="@action" asp-controller="Subsecretarias" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        @if (isEdit)
                        {
                            @Html.HiddenFor(m => m.Id)
                        }
                        
                        <div class="row g-3">
                            <!-- Código -->
                            <div class="col-md-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-barcode me-1"></i>
                                    @Html.DisplayNameFor(model => model.Codigo)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Codigo, new { 
                                    @class = "form-control text-uppercase", 
                                    placeholder = "Código único",
                                    maxlength = "20",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Nombre -->
                            <div class="col-md-8">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-tag me-1"></i>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Nombre, new { 
                                    @class = "form-control", 
                                    placeholder = "Nombre de la subsecretaría",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Descripción -->
                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-align-left me-1"></i>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </label>
                                @Html.TextAreaFor(model => model.Descripcion, new { 
                                    @class = "form-control", 
                                    rows = "3",
                                    placeholder = "Descripción de funciones y responsabilidades",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Alcaldía -->
                            @{
                                ViewData["fieldName"] = "AlcaldiaId";
                                ViewData["label"] = "Alcaldía";
                                ViewData["searchUrl"] = "/Alcaldias/Search";
                                ViewData["displayField"] = "nit";
                                ViewData["secondaryField"] = "municipio";
                                ViewData["icon"] = "fa-landmark";
                                ViewData["placeholder"] = "Escribe y presiona Enter para buscar...";
                                ViewData["required"] = "True";
                                
                                if (isEdit && Model?.AlcaldiaId > 0)
                                {
                                    ViewData["initialValue"] = Model.AlcaldiaId.ToString();
                                    ViewData["initialDisplay"] = Model.NitAlcaldia;
                                }
                            }
                            @await Html.PartialAsync("_SearchableDropdown")

                            <!-- Secretaría -->
                            @{
                                ViewData["fieldName"] = "SecretariaId";
                                ViewData["label"] = "Secretaría";
                                ViewData["searchUrl"] = "/Secretarias/Search";
                                ViewData["displayField"] = "codigo";
                                ViewData["secondaryField"] = "nombre";
                                ViewData["icon"] = "fa-building";
                                ViewData["placeholder"] = "Escribe y presiona Enter para buscar...";
                                ViewData["required"] = "True";
                                
                                if (isEdit && Model?.SecretariaId > 0)
                                {
                                    ViewData["initialValue"] = Model.SecretariaId.ToString();
                                    ViewData["initialDisplay"] = Model.CodigoSecretaria;
                                }
                            }
                            @await Html.PartialAsync("_SearchableDropdown")

                            <!-- Responsable -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user-tie me-1"></i>
                                    @Html.DisplayNameFor(model => model.Responsable)
                                </label>
                                @Html.TextBoxFor(model => model.Responsable, new { 
                                    @class = "form-control", 
                                    placeholder = "Nombre del responsable",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Responsable, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Teléfono -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-phone me-1"></i>
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </label>
                                @Html.TextBoxFor(model => model.Telefono, new { 
                                    @class = "form-control", 
                                    placeholder = "Teléfono de contacto",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Correo Institucional -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-envelope me-1"></i>
                                    @Html.DisplayNameFor(model => model.CorreoInstitucional)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-at"></i>
                                    </span>
                                    @Html.TextBoxFor(model => model.CorreoInstitucional, new { 
                                        @class = "form-control", 
                                        type = "email",
                                        placeholder = "correo@ejemplo.com",
                                        autocomplete = "off"
                                    })
                                </div>
                                @Html.ValidationMessageFor(model => model.CorreoInstitucional, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Presupuesto Asignado -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-money-bill-wave me-1"></i>
                                    @Html.DisplayNameFor(model => model.PresupuestoAsignado)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    @Html.TextBoxFor(model => model.PresupuestoAsignado, new { 
                                        @class = "form-control", 
                                        type = "number",
                                        step = "0.01",
                                        placeholder = "0.00",
                                        autocomplete = "off"
                                    })
                                </div>
                                @Html.ValidationMessageFor(model => model.PresupuestoAsignado, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Estado Activo -->
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    @Html.CheckBoxFor(model => model.Activo, new { @class = "form-check-input", @checked = Model?.Activo ?? true })
                                    <label class="form-check-label fw-bold">
                                        @Html.DisplayNameFor(model => model.Activo)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>@(isEdit ? "Guardar Cambios" : "Crear Subsecretaría")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
