@model Proyecto_alcaldia.Application.ViewModels.UsuarioViewModel

@{
    var isEdit = Model?.Id > 0;
    var action = isEdit ? "Edit" : "Create";
    ViewData["Title"] = isEdit ? "Editar Usuario" : "Crear Usuario";
    Layout = "_LayoutDashboard";
}

<main class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("Administración", null),
        ("Usuarios", Url.Action("Index", "Usuarios")),
        (isEdit ? "Editar Usuario" : "Crear Usuario", null)
    })

    <section class="row justify-content-center">
        <div class="col-lg-8">
            <article class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>@(isEdit ? "Editar" : "Crear Nuevo") Usuario
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @Html.ValidationSummary(false, "", new { @class = "mb-0 list-unstyled" })
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="@action" asp-controller="Usuarios" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.AlcaldiaId)
                        @if (isEdit)
                        {
                            @Html.HiddenFor(m => m.Id)
                        }
                        
                        <div class="row g-3">
                            <!-- Código -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-hashtag me-2"></i>
                                    Código
                                </label>
                                @Html.TextBoxFor(model => model.Id, new { 
                                    @class = "form-control", 
                                    placeholder = "Código"
                                })
                            </div>

                            <!-- Nombre Completo -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user me-2"></i>
                                    @Html.DisplayNameFor(model => model.NombreCompleto)
                                    <span class="text-danger">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.NombreCompleto, new { 
                                    @class = "form-control", 
                                    placeholder = "Ingrese el nombre completo",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.NombreCompleto, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Nombre de Usuario -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user-tag me-2"></i>
                                    @Html.DisplayNameFor(model => model.NombreUsuario)
                                </label>
                                @Html.TextBoxFor(model => model.NombreUsuario, new { 
                                    @class = "form-control", 
                                    placeholder = "Nombre de usuario único",
                                    autocomplete = "off"
                                })
                                @Html.ValidationMessageFor(model => model.NombreUsuario, "", new { @class = "text-danger small mt-1 d-block" })
                                <small class="text-muted">Opcional. Se generará automáticamente si se deja vacío.</small>
                            </div>

                            <!-- Correo Electrónico -->
                            <div class="col-12">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-envelope me-2"></i>
                                    @Html.DisplayNameFor(model => model.CorreoElectronico)
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                    @Html.TextBoxFor(model => model.CorreoElectronico, new { 
                                        @class = "form-control", 
                                        placeholder = "usuario@ejemplo.com",
                                        type = "email",
                                        autocomplete = "off"
                                    })
                                </div>
                                @Html.ValidationMessageFor(model => model.CorreoElectronico, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Contraseña -->
                            <div class="col-md-6" x-data="{ showPassword: false }">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-lock me-2"></i>
                                    @Html.DisplayNameFor(model => model.Contrasena)
                                    @if (!isEdit)
                                    {
                                        <span class="text-danger">*</span>
                                    }
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    <input x-bind:type="showPassword ? 'text' : 'password'" 
                                           name="Contrasena" 
                                           id="Contrasena"
                                           class="form-control" 
                                           placeholder="@(isEdit ? "Dejar vacío para no cambiar" : "Mínimo 6 caracteres")"
                                           @(isEdit ? "" : "required") />
                                    <button class="btn btn-outline-secondary" type="button" x-on:click="showPassword = !showPassword">
                                        <i x-bind:class="showPassword ? 'fas fa-eye-slash' : 'fas fa-eye'"></i>
                                    </button>
                                </div>
                                @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger small mt-1 d-block" })
                                @if (isEdit)
                                {
                                    <small class="text-muted">Dejar vacío para mantener la contraseña actual.</small>
                                }
                            </div>

                            <!-- Confirmar Contraseña -->
                            <div class="col-md-6" x-data="{ showPassword: false }">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-lock me-2"></i>
                                    @Html.DisplayNameFor(model => model.ConfirmarContrasena)
                                    @if (!isEdit)
                                    {
                                        <span class="text-danger">*</span>
                                    }
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    <input x-bind:type="showPassword ? 'text' : 'password'" 
                                           name="ConfirmarContrasena" 
                                           id="ConfirmarContrasena"
                                           class="form-control" 
                                           placeholder="Confirme la contraseña"
                                           @(isEdit ? "" : "required") />
                                    <button class="btn btn-outline-secondary" type="button" x-on:click="showPassword = !showPassword">
                                        <i x-bind:class="showPassword ? 'fas fa-eye-slash' : 'fas fa-eye'"></i>
                                    </button>
                                </div>
                                @Html.ValidationMessageFor(model => model.ConfirmarContrasena, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <!-- Rol -->
                            @{
                                ViewData["fieldName"] = "RolId";
                                ViewData["label"] = "Rol";
                                ViewData["options"] = ViewBag.Roles;
                                ViewData["selectedValue"] = Model?.RolId.ToString() ?? "";
                                ViewData["placeholder"] = "Buscar rol por código o nombre...";
                                ViewData["required"] = "True";
                                ViewData["icon"] = "fa-user-shield";
                            }
                            @await Html.PartialAsync("_SimpleDropdown")

                            <!-- Estado Activo -->
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    @Html.CheckBoxFor(model => model.Activo, new { 
                                        @class = "form-check-input", 
                                        role = "switch",
                                        id = "activoSwitch",
                                        @checked = Model?.Activo ?? true
                                    })
                                    <label class="form-check-label fw-bold" for="activoSwitch">
                                        @Html.DisplayNameFor(model => model.Activo)
                                    </label>
                                </div>
                                <small class="text-muted">
                                    Usuario activo puede acceder al sistema. Usuario inactivo no puede iniciar sesión.
                                </small>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>@(isEdit ? "Guardar Cambios" : "Crear Usuario")
                            </button>
                        </div>
                    </form>
                </div>
            </article>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Obtener el próximo ID si estamos creando
        @if (!isEdit)
        {
            <text>
            $(document).ready(function() {
                $.ajax({
                    url: '@Url.Action("GetNextId", "Usuarios")',
                    type: 'GET',
                    success: function(data) {
                        if (data && data.nextId) {
                            $('#Id').val(data.nextId);
                        }
                    }
                });
            });
            </text>
        }
    </script>
}
