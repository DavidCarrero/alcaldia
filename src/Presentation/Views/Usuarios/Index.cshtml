@model IEnumerable<Proyecto_alcaldia.Application.ViewModels.UsuarioViewModel>

@{
    ViewData["Title"] = "Gestión de Usuarios";
    Layout = "_LayoutDashboard";
}

<main class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("Administración", null),
        ("Usuarios", null)
    })

    <!-- Encabezado con Icono -->
    <header class="page-header mb-4">
        <div class="page-header-icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="page-header-content flex-grow-1">
            <h2>Gestión de Usuarios</h2>
            <p class="text-muted">Administración de usuarios y accesos</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Crear Usuario
            </a>
        </div>
    </header>

    <!-- Tarjetas de Estadísticas -->
    <section class="row g-4 mb-4" aria-label="Estadísticas de usuarios">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-user-check fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Usuarios Activos</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.UsuariosActivos</h3>
                            <small class="text-success">Con acceso al sistema</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-secondary bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-user-times fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Usuarios Inactivos</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.UsuariosInactivos</h3>
                            <small class="text-muted">Sin acceso</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-clock fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Sesiones Activas</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.SesionesActivas</h3>
                            <small class="text-warning">Conectados ahora</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-sign-in-alt fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Accesos Hoy</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.AccesosHoy</h3>
                            <small class="text-info">Inicios de sesión</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Tabla de Usuarios -->
    <section class="card border-0 shadow-sm" aria-label="Listado de usuarios">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0 fw-bold">Listado de Usuarios</h5>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" id="searchInput" 
                               placeholder="Buscar usuario...">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="usuariosTable">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Último Acceso</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-2">
                                            @usuario.NombreCompleto.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-bold">@usuario.NombreCompleto</div>
                                            @if (!string.IsNullOrEmpty(usuario.NombreUsuario))
                                            {
                                                <small class="text-muted">@@@usuario.NombreUsuario</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>@usuario.CorreoElectronico</td>
                                <td>
                                    @* Aquí se mostrarían los roles del usuario *@
                                    <span class="badge bg-primary">Administrador</span>
                                </td>
                                <td>
                                    @if (usuario.UltimoAcceso.HasValue)
                                    {
                                        <span>@usuario.UltimoAcceso.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Nunca</span>
                                    }
                                </td>
                                <td>
                                    @if (usuario.Activo)
                                    {
                                        <span class="badge bg-success">ACTIVO</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">INACTIVO</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@usuario.Id" 
                                           class="btn-action btn-edit" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn-action btn-delete" 
                                                onclick="confirmDelete('@Url.Action("Delete", "Usuarios", new { id = usuario.Id })', '@usuario.NombreCompleto', '@Url.Action("Index", "Usuarios")')" 
                                                title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script>
        // Búsqueda en tiempo real
        $('#searchInput').on('keyup', function() {
            var value = $(this).val().toLowerCase();
            $('#usuariosTable tbody tr').filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });
    </script>
    <style>
        .avatar-circle {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 16px;
        }

        .card {
            transition: transform 0.2s;
        }

        .card:hover {
            transform: translateY(-3px);
        }

        .table tbody tr {
            transition: background-color 0.2s;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }
    </style>
}
