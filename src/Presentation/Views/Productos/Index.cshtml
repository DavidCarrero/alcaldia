@model IEnumerable<Proyecto_alcaldia.Application.ViewModels.ProductoViewModel>

@{
    ViewData["Title"] = "Productos";
    Layout = "_LayoutDashboard";
    
    // Obtener estadísticas desde ViewBag
    var totalProductos = ViewBag.TotalProductos ?? ViewBag.TotalCount ?? Model.Count();
    var presupuestoTotal = ViewBag.PresupuestoTotal ?? Model.Sum(p => p.PresupuestoAsignado ?? 0);
    var indicadoresVinculados = ViewBag.IndicadoresVinculados ?? Model.Sum(p => (int?)p.CantidadIndicadores ?? 0);
}

<main class="container-fluid">
    @await Html.PartialAsync("_Breadcrumb", new List<(string, string?)> {
        ("Planificación", null),
        ("Productos", null)
    })

    <!-- Encabezado con Icono -->
    <header class="page-header mb-4">
        <div class="page-header-icon">
            <i class="fas fa-box-open"></i>
        </div>
        <div class="page-header-content flex-grow-1">
            <h2>Productos</h2>
            <p class="text-muted">Gestione los productos vinculados a los programas</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Nuevo Producto
            </a>
        </div>
    </header>

    <!-- Tarjetas de Estadísticas -->
    <section class="row g-4 mb-4" aria-label="Estadísticas de productos">
        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-box-open fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Productos</h6>
                            <h3 class="mb-0 fw-bold">@totalProductos</h3>
                            <small class="text-primary">Registrados</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-dollar-sign fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Presupuesto Total</h6>
                            <h3 class="mb-0 fw-bold">@(((decimal)presupuestoTotal).ToString("C0"))</h3>
                            <small class="text-success">Asignado</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-gradient rounded-3 p-3 text-white">
                                <i class="fas fa-chart-bar fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Indicadores Vinculados</h6>
                            <h3 class="mb-0 fw-bold">@indicadoresVinculados</h3>
                            <small class="text-info">Total indicadores</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Barra de Búsqueda -->
    <section class="card border-0 shadow-sm mb-4" aria-label="Búsqueda de productos">
        <div class="card-body">
            <form asp-action="Index" method="get" id="searchForm">
                <input type="hidden" name="pageSize" value="@(ViewBag.PageSize ?? 5)" />
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" 
                           name="searchTerm" 
                           class="form-control border-start-0" 
                           placeholder="Buscar por código o nombre..."
                           value="@ViewData["SearchTerm"]"
                           onkeypress="if(event.key === 'Enter') { this.form.submit(); return false; }">
                </div>
            </form>
        </div>
    </section>

    <!-- Tabla de Productos -->
    <section class="card border-0 shadow-sm" aria-label="Listado de productos">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold">Listado de Productos</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Programa</th>
                            <th>Descripción</th>
                            <th>Presupuesto</th>
                            <th class="text-center">Indicadores</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var producto in Model)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary">@producto.Codigo</span></td>
                                    <td><span class="fw-bold">@producto.Nombre</span></td>
                                    <td>@producto.NombrePrograma</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(producto.Descripcion))
                                        {
                                            <span>@(producto.Descripcion.Length > 40 ? producto.Descripcion.Substring(0, 40) + "..." : producto.Descripcion)</span>
                                        }
                                    </td>
                                    <td>@(producto.PresupuestoAsignado?.ToString("C0") ?? "-")</td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@(producto.CantidadIndicadores)</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="action-buttons">
                                            <a asp-action="Edit" asp-route-id="@producto.Id" 
                                               class="btn-action btn-edit" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn-action btn-delete" 
                                                    onclick="confirmDelete('@Url.Action("Delete", "Productos", new { id = producto.Id })', '@producto.Codigo', '@Url.Action("Index", "Productos")')"
                                                    title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5">
                                    <i class="fas fa-box-open fa-4x text-muted mb-3 d-block"></i>
                                    <h5 class="text-muted">No hay resultados</h5>
                                    @if (!string.IsNullOrWhiteSpace(ViewData["SearchTerm"]?.ToString()))
                                    {
                                        <p class="text-muted mb-3">No se encontraron productos que coincidan con "<strong>@ViewData["SearchTerm"]</strong>"</p>
                                        <a asp-action="Index" class="btn btn-outline-primary">
                                            <i class="fas fa-times me-1"></i>Limpiar búsqueda
                                        </a>
                                    }
                                    else
                                    {
                                        <p class="text-muted mb-3">No hay productos registrados. Comience creando un nuevo registro.</p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Paginación -->
            @await Html.PartialAsync("_Pagination")
        </div>
    </section>
</main>

@section Scripts {
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <style>
        [x-cloak] { display: none !important; }

        .card {
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
        }

        .table tbody tr {
            transition: all 0.2s ease;
        }

        .table tbody tr:hover {
            background-color: var(--theme-primary-light, rgba(13, 110, 253, 0.05));
            transform: scale(1.01);
        }

        .btn-action {
            transition: all 0.2s ease;
        }

        .btn-action:hover {
            transform: scale(1.15);
        }
    </style>
}
